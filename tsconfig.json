{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["pages/*"],
        "@tests/*": ["tests/*"]
      }
    },
    "include": ["tests/**/*.ts", "pages/**/*.ts"]
  }
  